# BBS AI Agent Environment Variables

# OpenAI API Key (required)
OPENAI_API_KEY=your_openai_api_key_here

# Minecraft RCON Settings (optional - for command execution)
RCON_HOST=localhost
RCON_PORT=25575
RCON_PASSWORD=minecraft

# Minecraft Paths
# Leave empty to use default: %APPDATA%/.minecraft
MINECRAFT_DIR=
# Leave empty to use default: %MINECRAFT_DIR%/config/bbs
BBS_CONFIG_DIR=

# FFmpeg Path
# Leave empty if ffmpeg is in your system PATH or standard Minecraft location
FFMPEG_PATH=

# Video Output Settings
VIDEO_WIDTH=1920
VIDEO_HEIGHT=1080
VIDEO_FPS=60
